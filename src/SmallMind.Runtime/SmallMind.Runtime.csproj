<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    
    <!-- NuGet Package Metadata -->
    <PackageId>SmallMind.Runtime</PackageId>
    <Version>0.3.0</Version>
    <Authors>Justin Miller</Authors>
    <Company>Justin Miller</Company>
    <Product>SmallMind</Product>
    <Description>Text generation runtime, sampling strategies, and conversation sessions for SmallMind.</Description>
    <PackageTags>llm;text-generation;sampling;inference;educational;csharp</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/justinamiller/SmallMind</PackageProjectUrl>
    <RepositoryUrl>https://github.com/justinamiller/SmallMind</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SmallMind.Abstractions\SmallMind.Abstractions.csproj" />
    <ProjectReference Include="..\SmallMind.Core\SmallMind.Core.csproj" />
    <ProjectReference Include="..\SmallMind.Transformers\SmallMind.Transformers.csproj" />
    <ProjectReference Include="..\SmallMind.Tokenizers\SmallMind.Tokenizers.csproj" />
    <ProjectReference Include="..\SmallMind.Quantization\SmallMind.Quantization.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Main library projects -->
    <InternalsVisibleTo Include="SmallMind.Engine" />
    <InternalsVisibleTo Include="SmallMind.Rag" />
    
    <!-- Test projects -->
    <InternalsVisibleTo Include="SmallMind.Tests" />
    <InternalsVisibleTo Include="SmallMind.IntegrationTests" />
    <InternalsVisibleTo Include="SmallMind.PerfTests" />
    
    <!-- CLI and sample projects -->
    <InternalsVisibleTo Include="SmallMind.Console" />
    <InternalsVisibleTo Include="SmallMind.Rag.Cli" />
    <InternalsVisibleTo Include="CachingAndBatching" />
    <InternalsVisibleTo Include="CreateBenchmarkModel" />
    <InternalsVisibleTo Include="GgufInferenceDemo" />
    <InternalsVisibleTo Include="InferenceAllocationBenchmark" />
    <InternalsVisibleTo Include="InferenceFeaturesBenchmark" />
    <InternalsVisibleTo Include="MatMulBenchmark" />
    <InternalsVisibleTo Include="MinimalGenerate" />
    <InternalsVisibleTo Include="MultiThreadedGeneration" />
    <InternalsVisibleTo Include="ParameterLimitsDemo" />
    <InternalsVisibleTo Include="PretrainedModels" />
    <InternalsVisibleTo Include="ProductionInference" />
    <InternalsVisibleTo Include="ProfileModelCreation" />
    <InternalsVisibleTo Include="ProfilerBenchmarks" />
    <InternalsVisibleTo Include="SmallMind.QuickStart" />
    <InternalsVisibleTo Include="SmallMind.Server" />
    <InternalsVisibleTo Include="SmallMind.ValidationRunner" />
    <InternalsVisibleTo Include="StandardLLMBenchmarks" />
    <InternalsVisibleTo Include="Tier1HotpathBenchmark" />
    <InternalsVisibleTo Include="Tier2Tier3Benchmarks" />
    <InternalsVisibleTo Include="ValidateGguf" />
  </ItemGroup>

</Project>
