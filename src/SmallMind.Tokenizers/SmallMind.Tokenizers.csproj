<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    
    <!-- NuGet Package Metadata -->
    <PackageId>SmallMind.Tokenizers</PackageId>
    <Version>0.3.0</Version>
    <Authors>Justin Miller</Authors>
    <Company>Justin Miller</Company>
    <Product>SmallMind</Product>
    <Description>Text tokenization interfaces and implementations (CharTokenizer, BpeTokenizer) for SmallMind.</Description>
    <PackageTags>llm;tokenizer;bpe;nlp;text-processing;educational;csharp</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/justinamiller/SmallMind</PackageProjectUrl>
    <RepositoryUrl>https://github.com/justinamiller/SmallMind</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SmallMind.Abstractions\SmallMind.Abstractions.csproj" />
    <ProjectReference Include="..\SmallMind.Core\SmallMind.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="SmallMind.Runtime" />
    <InternalsVisibleTo Include="SmallMind.Quantization" />
    <InternalsVisibleTo Include="SmallMind.Engine" />
    <InternalsVisibleTo Include="SmallMind.Rag" />
    <InternalsVisibleTo Include="SmallMind.Console" />
    <InternalsVisibleTo Include="SmallMind.Tests" />
    <InternalsVisibleTo Include="SmallMind.PerfTests" />
    <InternalsVisibleTo Include="SmallMind.IntegrationTests" />
    <InternalsVisibleTo Include="MinimalGenerate" />
    <InternalsVisibleTo Include="GgufInferenceDemo" />
    <InternalsVisibleTo Include="TokenizerPerf" />
  </ItemGroup>

</Project>
