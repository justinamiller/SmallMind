<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    
    <!-- NuGet Package Metadata -->
    <PackageId>SmallMind.Transformers</PackageId>
    <Version>0.2.0</Version>
    <Authors>Justin Miller</Authors>
    <Company>Justin Miller</Company>
    <Product>SmallMind</Product>
    <Description>Transformer model architecture (attention, FFN, LayerNorm) for SmallMind - a pure C# educational language model.</Description>
    <PackageTags>llm;language-model;transformer;attention;neural-network;educational;csharp</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/justinamiller/SmallMind</PackageProjectUrl>
    <RepositoryUrl>https://github.com/justinamiller/SmallMind</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SmallMind.Core\SmallMind.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="SmallMind.Tests" />
    <InternalsVisibleTo Include="SmallMind.IntegrationTests" />
  </ItemGroup>

</Project>
